PORT=4000
NODE_ENV=development

# Prisma / SQLite
# Note: SQLite paths are resolved relative to `prisma/schema.prisma`
DATABASE_URL="file:./dev.db"

# Recognition (optional)
ENABLE_AI_RECOGNITION=true
AI_RECOGNITION_TIMEOUT_MS=9000
OPENAI_API_BASE_URL=https://api.openai.com
OPENAI_API_KEY=
OPENAI_VISION_MODEL=gpt-4.1-mini
OPENAI_VISION_REASONING_EFFORT=
OPENAI_VISION_MAX_OUTPUT_TOKENS=1200

# Offers (mock + optional live search)
ENABLE_WEB_SEARCH_OFFERS=true
WEB_SEARCH_REQUEST_TIMEOUT_MS=5500
WEB_SEARCH_RETAILER_LIMIT=4

# SerpAPI (used for web search offers + Amazon ASIN hydration)
ENABLE_SERPAPI_PROXY=true
SERPAPI_BASE_URL=https://serpapi.com
SERPAPI_API_KEY=
SERPAPI_ENGINE=google
SERPAPI_COUNTRY=us
SERPAPI_LANGUAGE=en
SERPAPI_REQUEST_TIMEOUT_MS=12000
SERPAPI_RESPONSE_CACHE_TTL_MS=300000

# Optional UPC lookups (barcode-only recognition)
ENABLE_UPC_DB_LOOKUP=true
UPC_DB_LOOKUP_TIMEOUT_MS=5000
ENABLE_UPCITEMDB_LOOKUP=true
UPCITEMDB_API_BASE_URL=https://api.upcitemdb.com
UPCITEMDB_API_KEY=
ENABLE_OPENFOODFACTS_LOOKUP=true
OPENFOODFACTS_API_BASE_URL=https://world.openfoodfacts.org

# Payment
PAYMENT_PROVIDER=mock
VISA_API_BASE_URL=https://sandbox.api.visa.com
VISA_API_KEY=
VISA_API_SECRET=

# Webhook secrets
EXTENSION_WEBHOOK_SECRET=
SHARED_WATCHLIST_WEBHOOK_SECRET=

# Shared watchlist remote (website) sync
ENABLE_SHARED_REMOTE_WATCHLIST_SYNC=false
SHARED_REMOTE_WATCHLIST_BASE_URL=
SHARED_REMOTE_WATCHLIST_TIMEOUT_MS=7000
ENABLE_SHARED_REMOTE_WATCHLIST_PULL=false
SHARED_REMOTE_WATCHLIST_PULL_PATH=/items
SHARED_REMOTE_WATCHLIST_PULL_REPLACE=false
